{
    /*"Addition:findin": "protocol.connection.3.json",*/
    /* Description of main messages */
    "Message": {
        "clientId"  : "string",
        "guid?"     : "guid",
        "Handshake": {
            "Response": {
                "allowed"   : "boolean",
                "reason?"   : "Reasons",
                "error?"    : "string",
                "Reasons"   : ["FAIL_AUTH", "NO_TOKEN_FOUND", "NO_CLIENT_ID_FOUND"]
            }
        },
        /* Reconnections 
        Used to text
        */
        "Reconnection": {
            "Response": {
                "allowed": "boolean"
            },
            "Responses": ["ConnectionError"]
        },
        "Hook": {
            "Responses": ["ConnectionError", "Disconnect"]
        },
        "Pending": {
            "Response": {
                "event": "EventDefinition"
            },
            "Responses": ["Disconnect"]
        },
        "Event": {
            "Request": {
                "event": "EventDefinition"
            },
            "Response": {
                "eventGUID?": "string",
                "subscribers": "integer"
            },
            "Responses" : ["ConnectionError"]
        },
        "Subscribe": {
            "Request": {
                "subscription" : "Subscription"
            },
            "Response": {
                "status": "boolean"
            },
            "Responses" : ["ConnectionError"]
        },
        "Unsubscribe": {
            "Request": {
                "subscription": "Subscription"
            },
            "Response": {
                "status": "boolean"
            },
            "Responses" : ["ConnectionError"]
        },
        "UnsubscribeAll": {
            "Request": {
                "subscription": "Subscription"
            },
            "Response": {
                "status": "boolean"
            },
            "Responses" : ["ConnectionError"]
        } 
    },
    "EventDefinition": {
        "protocol": "string",
        "event": "string",
        "body": "string",
        "eventGUID?": "guid"
    },
    "Subscription": {
        "protocol": "string",
        "event?": "string"
    },
    "ConnectionError": {
        "reason": "array<Reasons>",
        "message": "string",
        "Reasons": ["FAIL_AUTH", "NO_TOKEN_FOUND", "NO_CLIENT_ID_FOUND", "NO_TOKEN_PROVIDED", "TOKEN_IS_WRONG"]
    },
    "Disconnect": {
        "reason": "Reasons",
        "message": "string",
        "Reasons": ["SHUTDOWN"]
    },
    "version": "0.0.1"
}