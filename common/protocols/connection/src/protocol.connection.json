{
    "Message": {
        "clientId"  : "string",
        "guid?"     : "guid",
        "Handshake": {
            "Response": {
                "token?"    : "string",
                "reason?"   : "Reasons",
                "error?"    : "string",
                "Reasons"   : ["FAIL_AUTH", "NO_TOKEN_FOUND", "NO_CLIENT_ID_FOUND"]
            }
        },
        "Reconnection": {
            "Request" : {
                "token": "string"
            },
            "Response": {
                "allowed": "boolean"
            },
            "Responses": ["ConnectionError"]
        },
        "Hook": {
            "Request" : {
                "token": "string"
            },
            "Responses": ["ConnectionError", "Disconnect"]
        },
        "Pending": {
            "Request" : {
                "token": "string"
            },
            "Response": {
                "event?": "EventDefinition"
            },
            "Responses": ["Disconnect"]
        },
        "Event": {
            "Request": {
                "event": "EventDefinition",
                "token": "string",
                "aliases?": "array<KeyValue>"
            },
            "Response": {
                "subscribers": "integer"
            },
            "Responses" : ["ConnectionError"]
        },
        "Subscribe": {
            "Request": {
                "subscription" : "Subscription",
                "token": "string"
            },
            "Response": {
                "status": "boolean"
            },
            "Responses" : ["ConnectionError"]
        },
        "Unsubscribe": {
            "Request": {
                "subscription": "Subscription",
                "token": "string"
            },
            "Response": {
                "status": "boolean"
            },
            "Responses" : ["ConnectionError"]
        },
        "UnsubscribeAll": {
            "Request": {
                "subscription": "Subscription",
                "token": "string"
            },
            "Response": {
                "status": "boolean"
            },
            "Responses" : ["ConnectionError"]
        },
        "Registration": {
            "Request": {
                "aliases": "array<KeyValue>",
                "token": "string"
            },
            "Response": {
                "status": "boolean"
            },
            "Responses" : ["ConnectionError"]
        } 
    },
    "EventDefinition": {
        "protocol": "string",
        "event": "string",
        "body": "string"
    },
    "Subscription": {
        "protocol": "string",
        "event?": "string"
    },
    "ConnectionError": {
        "reason": "Reasons",
        "message": "string",
        "Reasons": ["FAIL_AUTH", "NO_TOKEN_FOUND", "NO_CLIENT_ID_FOUND", "NO_TOKEN_PROVIDED", "TOKEN_IS_WRONG", "UNEXPECTED_REQUEST", "NO_DATA_PROVIDED"]
    },
    "Disconnect": {
        "reason": "Reasons",
        "message?": "string",
        "Reasons": ["SHUTDOWN"]
    },
    "KeyValue": {
        "key": "string",
        "value": "string"
    },
    "version": "0.0.1"
}